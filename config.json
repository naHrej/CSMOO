{
  "Server": {
    "Port": 1701,
    "ShowDebugInConsole": true
  },
  "HotReload": {
    "Enabled": false
  },
  "Database": {
    "GameDataFile": "gamedata.db",
    "LogDataFile": "gamedata-log.db"
  },
  "Logging": {
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "GameLogFile": "logs/game.log",
    "DebugLogFile": "logs/debug.log",
    "LogLevel": "Debug",
    "MaxLogFiles": 5
  },
  "Scripting": {
    "MaxCallDepth": 100,
    "MaxExecutionTimeMs": 5000
  }
}
