{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/CSMOO.sln"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "--configuration",
        "Debug",
        "${workspaceFolder}/CSMOO.sln"
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": ["clean"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ðŸ”¥ Hot Reload Server",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/CSMOO.csproj"
      ],
      "options": {
        "env": {
          "DOTNET_ENVIRONMENT": "Development",
          "DOTNET_WATCH_RESTART_ON_RUDE_EDIT": "true"
        }
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*dotnet watch.*",
            "endsPattern": "^.*Application started.*|^.*Started.*"
          }
        }
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "ðŸš€ Run Server (Standard)",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/CSMOO.csproj"
      ],
      "isBackground": true,
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "ðŸ”„ Reload Verbs (Manual)",
      "command": "echo",
      "type": "shell",
      "args": [
        "Use '@reload verbs' command in-game to manually reload verb definitions"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ðŸ“Š Hot Reload Status",
      "command": "echo",
      "type": "shell",
      "args": [
        "Use '@hotreload status' and '@corehot status' commands in-game for hot reload status"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
