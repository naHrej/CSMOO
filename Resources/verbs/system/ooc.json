{
  "name": "ooc",
  "aliases": "",
  "pattern": "*",
  "description": "Out of character chat to all online players",
  "code": [
    "// OOC command - out of character chat to all online players",
    "if (Args.Count == 0)",
    "{",
    "    Builtins.Notify(Player, \"Say what OOC?\");",
    "    return;",
    "}",
    "",
    "var message = string.Join(\" \", Args);",
    "var onlinePlayers = Builtins.GetOnlinePlayers();",
    "",
    "foreach (var onlinePlayer in onlinePlayers)",
    "{",
    "    if (onlinePlayer.Id == Player.Id)",
    "    {",
    "        Builtins.Notify(onlinePlayer, $\"[OOC] You say, \\\"{message}\\\"\");",
    "    }",
    "    else",
    "    {",
    "        Builtins.Notify(onlinePlayer, $\"[OOC] {Builtins.GetObjectName(Player.Id)} says, \\\"{message}\\\"\");",
    "    }",
    "}"
  ]
}
