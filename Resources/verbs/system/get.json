{
  "name": "get",
  "aliases": "take grab",
  "pattern": "*",
  "description": "Pick up an item",
  "code": [
    "// Get command - pick up an item",
    "if (Args.Count == 0)",
    "{",
    "    Builtins.Notify(Player, \"Get what?\");",
    "    return;",
    "}",
    "",
    "var itemName = string.Join(\" \", Args);",
    "var item = Builtins.FindItemInRoom(itemName);",
    "",
    "if (item == null)",
    "{",
    "    Builtins.Notify(Player, \"There is no such item here.\");",
    "    return;",
    "}",
    "",
    "var gettable = Builtins.GetBoolProperty(item.Id, \"gettable\", false);",
    "if (!gettable)",
    "{",
    "    Builtins.Notify(Player, \"You can't take that.\");",
    "    return;",
    "}",
    "",
    "// Move item to player's inventory",
    "if (Builtins.MoveObject(item.Id, Player.Id))",
    "{",
    "    var itemDesc = Builtins.GetProperty(item.Id, \"shortDescription\") ?? \"something\";",
    "    Builtins.Notify(Player, $\"You take {itemDesc}.\");",
    "}",
    "else",
    "{",
    "    Builtins.Notify(Player, \"You can't take that.\");",
    "}"
  ]
}
