{
  "name": "get",
  "aliases": "take grab",
  "pattern": "*",
  "description": "Pick up an item",
  "code": [
    "// Get command - pick up an item",
    "if (Args.Count == 0)",
    "{",
    "    notify(Player, \"Get what?\");",
    "    return;",
    "}",
    "",
    "var itemName = string.Join(\" \", Args);",
    "var itemId = FindObjectInRoom(itemName);",
    "",
    "if (string.IsNullOrEmpty(itemId))",
    "{",
    "    notify(Player, \"There is no such item here.\");",
    "    return;",
    "}",
    "",
    "var item = Helpers.GetObject(itemId);",
    "if (item == null)",
    "{",
    "    notify(Player, \"Error: Could not retrieve item.\");",
    "    return;",
    "}",
    "",
    "var gettable = item.gettable ?? false;",
    "if (!gettable)",
    "{",
    "    notify(Player, \"You can't take that.\");",
    "    return;",
    "}",
    "",
    "// Move item to player's inventory",
    "if (Builtins.MoveObject(itemId, Player.id))",
    "{",
    "    var itemDesc = item.shortDescription ?? item.name ?? \"something\";",
    "    notify(Player, $\"You take {itemDesc}.\");",
    "}",
    "else",
    "{",
    "    notify(Player, \"You can't take that.\");",
    "}"
  ]
}
