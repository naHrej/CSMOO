{
  "name": "look",
  "aliases": "l",
  "pattern": "*",
  "description": "Look around the room or at a specific object",
  "code": [
    "// Look command - shows room or looks at specific object",
    "if (Args.Count == 0)",
    "{",
    "    // Just 'look' - show the room",
    "    notify(Player, here.StyledDesc());",
    "}",
    "else if (Args.Count >= 2 && Args[0].ToLower() == \"at\")",
    "{",
    "    // 'look at something'",
    "    var target = string.Join(\" \", Args.Skip(1));",
    "    notify(player, $\"looking at {target}\");",
    "    Builtins.LookAtObject(target);",
    "}",
    "else",
    "{",
    "    // 'look something'",
    "    var target = string.Join(\" \", Args);",
    "    notify(player, $\"looking {target}\");",
    "    GameObject resolved = ObjectResolver.ResolveObject(target, Player);",
    "    if (resolved == null)",
    "    {",
    "        notify(player, $\"{target} is null\");",
    "    }",
    "    else",
    "    {",
    "        notify(player, $\"{target} is {resolved} - {resolved.Properties[\\\"Name\\\"]}\");",
    "    }",
    "    notify(player, $\"{resolved.Name}\");",
    "}"
  ]
}
