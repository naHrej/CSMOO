{
  "name": "list",
  "aliases": "@list",
  "pattern": "*",
  "description": "Show verb or function code (@list <object>:<verb> or @list <object>.<function>())",
  "code": [
    "// List command - show verb or function code",
    "if (Args.Count != 1)",
    "{",
    "    notify(Player, \"Usage: list <object>:<verb> or list <object>.<function>()\");",
    "    return;",
    "}",
    "",
    "var spec = Args[0];",
    "",
    "// Check if this is a function specification (object.function())",
    "if (spec.Contains('.') && spec.EndsWith(')'))",
    "{",
    "    // Remove the trailing ()",
    "    var specWithoutParens = spec.Substring(0, spec.Length - 2);",
    "    var dotIndex = specWithoutParens.LastIndexOf('.');",
    "    if (dotIndex == -1)",
    "    {",
    "        notify(Player, \"Function specification must be in format <object>.<function>()\");",
    "        return;",
    "    }",
    "    ",
    "    var objectName = specWithoutParens.Substring(0, dotIndex);",
    "    var functionName = specWithoutParens.Substring(dotIndex + 1);",
    "    ",
    "    var objectId = Builtins.ResolveObject(objectName, Player);",
    "    if (string.IsNullOrEmpty(objectId))",
    "    {",
    "        notify(Player, $\"Object '{objectName}' not found.\");",
    "        return;",
    "    }",
    "    ",
    "    // Use Builtins.FindFunction for proper inheritance resolution",
    "    var function = Builtins.FindFunction(objectId, functionName);",
    "    if (function == null)",
    "    {",
    "        notify(Player, $\"Function '{functionName}' not found on object '{objectName}'.\");",
    "        return;",
    "    }",
    "    ",
    "    // Display function information",
    "    var paramList = new List<string>();",
    "    for (int i = 0; i < function.ParameterTypes.Length && i < function.ParameterNames.Length; i++)",
    "    {",
    "        paramList.Add($\"{function.ParameterTypes[i]} {function.ParameterNames[i]}\");",
    "    }",
    "    var paramString = string.Join(\", \", paramList);",
    "    notify(Player, $\"=== Function {function.Name} ===\");",
    "    notify(Player, $\"Signature: {function.ReturnType} {function.Name}({paramString})\");",
    "    notify(Player, $\"Object: {objectName}\");",
    "    notify(Player, $\"Permissions: {function.Permissions}\");",
    "    if (!string.IsNullOrEmpty(function.Description))",
    "        notify(Player, $\"Description: {function.Description}\");",
    "    ",
    "    notify(Player, $\"Created by: {function.CreatedBy} on {function.CreatedAt:yyyy-MM-dd HH:mm}\");",
    "    notify(Player, $\"Modified: {function.ModifiedAt:yyyy-MM-dd HH:mm}\");",
    "    notify(Player, \"Code:\");",
    "    ",
    "    if (string.IsNullOrEmpty(function.Code))",
    "    {",
    "        notify(Player, \"  (no code)\");",
    "    }",
    "    else",
    "    {",
    "        var lines = function.Code.Split('\\n');",
    "        for (int i = 0; i < lines.Length; i++)",
    "        {",
    "            notify(Player, $\"{i + 1,3}: {lines[i]}\");",
    "        }",
    "    }",
    "}",
    "// Check if this is the old f:object:function format (backward compatibility)",
    "else if (spec.StartsWith(\"f:\"))",
    "{",
    "    var functionSpec = spec.Substring(2); // Remove \\\"f:\\\" prefix",
    "    if (!functionSpec.Contains(':'))",
    "    {",
    "        notify(Player, \"Function specification must be in format f:<object>:<function>\");",
    "        return;",
    "    }",
    "    ",
    "    // Split from the right to handle class:Object:function syntax",
    "    var lastColonIndex = functionSpec.LastIndexOf(':');",
    "    var objectName = functionSpec.Substring(0, lastColonIndex);",
    "    var functionName = functionSpec.Substring(lastColonIndex + 1);",
    "    ",
    "    var objectId = Builtins.ResolveObject(objectName, Player);",
    "    if (string.IsNullOrEmpty(objectId))",
    "    {",
    "        notify(Player, $\"Object '{objectName}' not found.\");",
    "        return;",
    "    }",
    "    ",
    "    notify(Player, $\"Debug: Resolved '{objectName}' to object ID: {objectId}\");",
    "    ",
    "    // Use Builtins.FindFunction for proper inheritance resolution",
    "    var function = Builtins.FindFunction(objectId, functionName);",
    "    if (function == null)",
    "    {",
    "        // Show debug info about what functions exist",
    "        var allFunctions = Builtins.GetFunctionsOnObject(objectId);",
    "        notify(Player, $\"Debug: Found {allFunctions.Count} functions on object:\");",
    "        foreach (var f in allFunctions)",
    "        {",
    "            notify(Player, $\"  - {f.Name} (ID: {f.Id})\");",
    "        }",
    "        notify(Player, $\"Function '{functionName}' not found on object '{objectName}'.\");",
    "        return;",
    "    }",
    "    ",
    "    // Display function information",
    "    var paramList2 = new List<string>();",
    "    for (int i = 0; i < function.ParameterTypes.Length && i < function.ParameterNames.Length; i++)",
    "    {",
    "        paramList2.Add($\"{function.ParameterTypes[i]} {function.ParameterNames[i]}\");",
    "    }",
    "    var paramString = string.Join(\", \", paramList2);",
    "    notify(Player, $\"=== Function {function.Name} ===\");",
    "    notify(Player, $\"Signature: {function.ReturnType} {function.Name}({paramString})\");",
    "    notify(Player, $\"Object: {objectName}\");",
    "    notify(Player, $\"Permissions: {function.Permissions}\");",
    "    if (!string.IsNullOrEmpty(function.Description))",
    "        notify(Player, $\"Description: {function.Description}\");",
    "    ",
    "    notify(Player, $\"Created by: {function.CreatedBy} on {function.CreatedAt:yyyy-MM-dd HH:mm}\");",
    "    notify(Player, $\"Modified: {function.ModifiedAt:yyyy-MM-dd HH:mm}\");",
    "    notify(Player, \"Code:\");",
    "    ",
    "    if (string.IsNullOrEmpty(function.Code))",
    "    {",
    "        notify(Player, \"  (no code)\");",
    "    }",
    "    else",
    "    {",
    "        var lines = function.Code.Split('\\n');",
    "        for (int i = 0; i < lines.Length; i++)",
    "        {",
    "            notify(Player, $\"{i + 1,3}: {lines[i]}\");",
    "        }",
    "    }",
    "}",
    "// Check if it's a verb specification (object:verb)",
    "else if (spec.Contains(':'))",
    "{",
    "    // Handle verbs (existing logic)",
    "    var lastColonIndex = spec.LastIndexOf(':');",
    "    var objectName = spec.Substring(0, lastColonIndex);",
    "    var verbName = spec.Substring(lastColonIndex + 1);",
    "    ",
    "    var verbInfo = Builtins.GetVerbInfo(objectName, verbName);",
    "    if (verbInfo == null)",
    "    {",
    "        notify(Player, $\"Object '{objectName}' or verb '{verbName}' not found.\");",
    "        return;",
    "    }",
    "    ",
    "    // Display verb information",
    "    notify(Player, $\"=== {verbInfo.ObjectName}:{verbInfo.VerbName} ===\");",
    "    if (!string.IsNullOrEmpty(verbInfo.Aliases))",
    "        notify(Player, $\"Aliases: {verbInfo.Aliases}\");",
    "    if (!string.IsNullOrEmpty(verbInfo.Pattern))",
    "        notify(Player, $\"Pattern: {verbInfo.Pattern}\");",
    "    if (!string.IsNullOrEmpty(verbInfo.Description))",
    "        notify(Player, $\"Description: {verbInfo.Description}\");",
    "    ",
    "    notify(Player, $\"Created by: {verbInfo.CreatedBy} on {verbInfo.CreatedAt:yyyy-MM-dd HH:mm}\");",
    "    notify(Player, \"Code:\");",
    "    ",
    "    if (verbInfo.CodeLines.Length == 0)",
    "    {",
    "        notify(Player, \"  (no code)\");",
    "    }",
    "    else",
    "    {",
    "        for (int i = 0; i < verbInfo.CodeLines.Length; i++)",
    "        {",
    "            notify(Player, $\"{i + 1,3}: {verbInfo.CodeLines[i]}\");",
    "        }",
    "    }",
    "}",
    "else",
    "{",
    "    notify(Player, \"Specification must be in format <object>:<verb> or <object>.<function>()\");",
    "}"
  ]
}
