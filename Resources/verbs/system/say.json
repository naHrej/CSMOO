{
  "name": "say",
  "aliases": "",
  "pattern": "*",
  "description": "Speak to others in the room",
  "code": [
    "// Say command - speak to others in the room",
    "if (Args.Count == 0)",
    "{",
    "    Builtins.Notify(Player, \"Say what?\");",
    "    return;",
    "}",
    "",
    "var message = string.Join(\" \", Args);",
    "Builtins.Notify(Player, $\"You say, \\\"{message}\\\"\");",
    "",
    "// Send to other players in the room",
    "Builtins.SayToRoom($\"{Builtins.GetPlayerName(Player.Id)} says, \\\"{message}\\\"\", true);"
  ]
}
